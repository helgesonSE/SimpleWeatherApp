<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:ViewModels="clr-namespace:SimpleWeatherApp.ViewModels" x:Class="SimpleWeatherApp.MainWindow"

        mc:Ignorable="d"
        FontSize="14pt"
        Title="Simple Weather App" Height="700" Width="855">


    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="#FFDBE3EF" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.DataContext>
        <ViewModels:Session/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="629*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="236*"/>
            <ColumnDefinition Width="517*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="LocationSearchBox" TextWrapping="Wrap" Text="" Margin="0,81,0,0" TextChanged="TextBox_TextChanged" FontSize="18" Width="245" Height="56" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="245" MaxWidth="245" MinHeight="56" MaxHeight="56" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="SimpleWeatherButton" Content="Simple" HorizontalAlignment="Left" Margin="28,81,0,0" VerticalAlignment="Top" Height="56" Width="108" Grid.Column="2" Click="SimpleWeatherButton_Click_1"/>
        <Button x:Name="AdvancedWeatherButton" Content="Advanced" HorizontalAlignment="Left" Margin="151,81,0,0" VerticalAlignment="Top" Height="56" Width="108" Click="Button_Click" Grid.Column="2"/>

        <ComboBox Margin="274,81,0,516" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="2" MinWidth="175" MinHeight="28"/>
        <Label x:Name="EnterLocationLabel" Content="Enter a location:" Margin="0,46,67,0" VerticalAlignment="Top" Grid.Column="1" Height="35"/>
        <Label x:Name="ReportTypeLabel" Content="Type of weather report:" Margin="28,46,258,0" VerticalAlignment="Top" Grid.Column="2" Height="35"/>
        <Label x:Name="PreviousReportLabel" Content="Previous results:" Margin="272,46,68,0" VerticalAlignment="Top" Grid.Column="2" Height="35"/>
        <Button x:Name="ReloadButton" Content="Reload Data" HorizontalAlignment="Left" Margin="313,488,0,0" VerticalAlignment="Top" Height="106" Width="166" Click="ReloadButton_Click" Grid.Column="2"/>
        <Label Content="Location" Grid.Column="1" Margin="10,177,32,396" Width="194" FontWeight="Bold" MinHeight="35"/>
        <Label Content="{Binding currentWeatherReport.address}" Grid.Column="1" Margin="10,233,32,340" Width="194" MinHeight="35"/>
        <Label Content="Temperature" Grid.Column="1" Margin="10,292,32,281" Width="194" FontWeight="Bold" MinHeight="35"/>
        <Label Content="{Binding currentWeatherReport.currentConditions.temp}" Grid.Column="1" Margin="10,348,32,225" Width="194" MinHeight="35"/>
        <Label Content="Precipitation" Grid.Column="1" Margin="10,409,32,164" Width="194" FontWeight="Bold" MinHeight="35"/>
        <Label Content="{Binding currentWeatherReport.currentConditions.precip}" Grid.Column="1" Margin="10,463,32,110" Width="194" MinHeight="35"/>
        <Label Content="SUNNY" Grid.Column="2" MinHeight="130" HorizontalAlignment="Left" VerticalAlignment="Top" Height="130" Width="230" Margin="245,182,0,0" MinWidth="230" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Time" Grid.Column="2" Margin="28,177,295,396" Width="194" FontWeight="Bold" MinHeight="35"/>
        <Label Content="{Binding currentWeatherReport.currentConditions.datetime}" Grid.Column="2" Margin="28,236,295,337" Width="194" MinHeight="35"/>
        <Label Content="Wind Speed" Grid.Column="2" Margin="28,292,295,281" Width="194" FontWeight="Bold" MinHeight="35"/>
        <Label Content="{Binding currentWeatherReport.currentConditions.windspeed}" Grid.Column="2" Margin="28,351,295,222" Width="194" MinHeight="35"/>
        <Label Content="---|--&gt;" Grid.Column="2" Margin="28,421,0,0" MinHeight="35" RenderTransformOrigin="0.458,0.605" FontWeight="Bold" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="{Binding currentWeatherReport.currentConditions.winddir}"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>




    </Grid>
</Window>
